<script>
  // Load current preferences
  function loadPreferences() {
    const consent = localStorage.getItem('hotel-cookie-consent');
    if (consent) {
      const data = JSON.parse(consent);
      (document.getElementById('maps-toggle') as HTMLInputElement).checked = data.maps;
      (document.getElementById('fonts-toggle') as HTMLInputElement).checked = data.fonts;
    } else {
      // Default: all enabled
      (document.getElementById('maps-toggle') as HTMLInputElement).checked = true;
      (document.getElementById('fonts-toggle') as HTMLInputElement).checked = true;
    }
  }

  // Save preferences
  document.getElementById('save-preferences')?.addEventListener('click', () => {
    const mapsEnabled = (document.getElementById('maps-toggle') as HTMLInputElement).checked;
    const fontsEnabled = (document.getElementById('fonts-toggle') as HTMLInputElement).checked;
    
    const consent = {
      analytics: false,
      maps: mapsEnabled,
      fonts: fontsEnabled,
      timestamp: Date.now()
    };
    
    localStorage.setItem('hotel-cookie-consent', JSON.stringify(consent));
    window.dispatchEvent(new CustomEvent('cookieConsentChanged', { detail: consent }));
    
