---
import siteData from '../../content/site.json';
---

<section id="accueil" class="relative min-h-screen flex items-center justify-center overflow-hidden pt-20">
  <!-- Hero Image with Overlay -->
  <div class="absolute inset-0 z-0">
    <img 
      src="/images/hero.jpg" 
      alt={`${siteData.HOTEL_NAME} - ${siteData.CITY}`}
      class="w-full h-full object-cover"
    />
    <div class="absolute inset-0 bg-gradient-to-b from-black/40 via-black/30 to-black/50"></div>
  </div>
  
  <!-- Content -->
  <div class="relative z-10 container mx-auto px-6 sm:px-8 lg:px-8 text-center text-white">
    <div class="max-w-4xl mx-auto space-y-4 sm:space-y-6 animate-fade-in">
      <!-- Title -->
      <h1 class="font-playfair text-3xl sm:text-5xl md:text-6xl lg:text-7xl font-bold leading-tight">
        {siteData.HOTEL_NAME}
        <span class="block text-lg sm:text-3xl md:text-4xl font-normal mt-2 text-[#C2A983]">
          {siteData.CITY}
        </span>
      </h1>
      
      <!-- Tagline -->
      <p class="text-base sm:text-2xl md:text-3xl font-light leading-relaxed px-4">
        {siteData.TAGLINE}
      </p>
      
      <!-- Introduction Paragraph - Hidden on small mobile -->
      <p class="hidden sm:block text-sm sm:text-lg max-w-2xl mx-auto leading-relaxed opacity-95 px-2">
        {siteData.INTRO_PARAGRAPH}
      </p>
      
      <!-- Amenities List -->
      <div class="pt-4 sm:pt-8">
        <!-- Mobile: 3 lignes défilantes -->
        <div class="sm:hidden space-y-2 overflow-hidden w-full">
          <!-- Ligne 1: gauche → droite (4x les badges pour vraiment défiler) -->
          <div class="flex gap-2 animate-scroll-left w-max">
            {[...siteData.AMENITIES, ...siteData.AMENITIES, ...siteData.AMENITIES, ...siteData.AMENITIES].map((amenity, idx) => (
              <div class="flex-shrink-0 flex items-center space-x-1.5 bg-white/10 backdrop-blur-sm px-3 py-1.5 rounded-full border border-white/20">
                <svg class="w-3 h-3 text-[#C2A983] flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
                <span class="text-xs font-medium whitespace-nowrap">{amenity}</span>
              </div>
            ))}
          </div>
          
          <!-- Ligne 2: droite → gauche -->
          <div class="flex gap-2 animate-scroll-right w-max">
            {[...siteData.AMENITIES, ...siteData.AMENITIES, ...siteData.AMENITIES, ...siteData.AMENITIES].map((amenity, idx) => (
              <div class="flex-shrink-0 flex items-center space-x-1.5 bg-white/10 backdrop-blur-sm px-3 py-1.5 rounded-full border border-white/20">
                <svg class="w-3 h-3 text-[#C2A983] flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
                <span class="text-xs font-medium whitespace-nowrap">{amenity}</span>
              </div>
            ))}
          </div>
          
          <!-- Ligne 3: gauche → droite (lent) -->
          <div class="flex gap-2 animate-scroll-left-slow w-max">
            {[...siteData.AMENITIES, ...siteData.AMENITIES, ...siteData.AMENITIES, ...siteData.AMENITIES].map((amenity, idx) => (
              <div class="flex-shrink-0 flex items-center space-x-1.5 bg-white/10 backdrop-blur-sm px-3 py-1.5 rounded-full border border-white/20">
                <svg class="w-3 h-3 text-[#C2A983] flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
                <span class="text-xs font-medium whitespace-nowrap">{amenity}</span>
              </div>
            ))}
          </div>
        </div>
        
        <!-- Desktop: Normal flex wrap -->
        <div class="hidden sm:flex flex-wrap justify-center gap-3 lg:gap-4 px-4">
          {siteData.AMENITIES.map((amenity) => (
            <div class="flex items-center space-x-2 bg-white/10 backdrop-blur-sm px-4 py-2 rounded-full border border-white/20">
              <svg class="w-4 h-4 text-[#C2A983] flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
              </svg>
              <span class="text-sm font-medium">{amenity}</span>
            </div>
          ))}
        </div>
      </div>
      
      <!-- CTA Button -->
      <div class="pt-4 sm:pt-8 pb-16 sm:pb-0">
        <a 
          href="#chambres" 
          class="inline-block px-8 py-3 bg-[#C2A983] text-white text-sm sm:text-base font-semibold rounded-md hover:bg-white hover:text-[#1C1C1C] transition-all duration-300 shadow-lg hover:shadow-xl transform hover:-translate-y-0.5"
        >
          Découvrir nos chambres
        </a>
      </div>
    </div>
  </div>
  
  <!-- Scroll Indicator -->
  <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 z-10 animate-bounce">
    <a href="#chambres" class="text-white/80 hover:text-white transition-colors">
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
      </svg>
    </a>
  </div>
</section>

<style>
  @keyframes fade-in {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  .animate-fade-in {
    animation: fade-in 1s ease-out;
  }

  /* Scrolling animations for amenities badges */
  @keyframes scroll-left {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  @keyframes scroll-right {
    0% {
      transform: translateX(-50%);
    }
    100% {
      transform: translateX(0);
    }
  }

  .animate-scroll-left {
    animation: scroll-left 25s linear infinite;
  }

  .animate-scroll-right {
    animation: scroll-right 30s linear infinite;
  }

  .animate-scroll-left-slow {
    animation: scroll-left 35s linear infinite;
  }
  
  /* Pause animation on hover (pour lire les badges) */
  @media (hover: hover) {
    .animate-scroll-left:hover,
    .animate-scroll-right:hover,
    .animate-scroll-left-slow:hover {
      animation-play-state: paused;
    }
  }
</style>
