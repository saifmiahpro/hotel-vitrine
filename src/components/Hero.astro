---
import siteData from '../../content/site.json';
---

<section id="accueil" class="relative h-screen flex items-center justify-center overflow-hidden pt-20">
  <!-- Hero Image with Overlay -->
  <div class="absolute inset-0 z-0">
    <img 
      src="/images/hero.jpg" 
      alt={`${siteData.HOTEL_NAME} - ${siteData.CITY}`}
      class="w-full h-full object-cover"
    />
    <div class="absolute inset-0 bg-gradient-to-b from-black/40 via-black/30 to-black/50"></div>
  </div>
  
  <!-- Content -->
  <div class="relative z-10 container mx-auto px-6 sm:px-8 lg:px-8 text-center text-white">
    <div class="max-w-4xl mx-auto space-y-4 sm:space-y-6 animate-fade-in">
      <!-- Title -->
      <h1 class="font-playfair text-3xl sm:text-5xl md:text-6xl lg:text-7xl font-bold leading-tight">
        {siteData.HOTEL_NAME}
        <span class="block text-lg sm:text-3xl md:text-4xl font-normal mt-2 text-[#C2A983]">
          {siteData.CITY}
        </span>
      </h1>
      
      <!-- Tagline -->
      <p class="text-base sm:text-2xl md:text-3xl font-light leading-relaxed px-4">
        {siteData.TAGLINE}
      </p>
      
      <!-- Introduction Paragraph - Hidden on small mobile -->
      <p class="hidden sm:block text-sm sm:text-lg max-w-2xl mx-auto leading-relaxed opacity-95 px-2">
        {siteData.INTRO_PARAGRAPH}
      </p>
      
      <!-- Amenities List -->
      <div class="pt-4 sm:pt-8 relative">
        <!-- Mobile: Effet nuages flottants - 3 lignes -->
        <div class="sm:hidden relative h-24 -mx-6" style="width: 100vw; position: relative; left: 50%; right: 50%; margin-left: -50vw; margin-right: -50vw;">
          <!-- Ligne 1: Flottement gauche → droite -->
          <div class="absolute top-0 left-0 flex gap-3 animate-float-cloud-1">
            {[...siteData.AMENITIES, ...siteData.AMENITIES, ...siteData.AMENITIES, ...siteData.AMENITIES, ...siteData.AMENITIES].map((amenity, idx) => (
              <div class="flex-shrink-0 flex items-center space-x-1.5 bg-white/15 backdrop-blur-sm px-3 py-1.5 rounded-full border border-white/30 shadow-lg">
                <svg class="w-3 h-3 text-[#C2A983] flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
                <span class="text-xs font-medium whitespace-nowrap">{amenity}</span>
              </div>
            ))}
          </div>
          
          <!-- Ligne 2: Flottement droite → gauche (milieu) -->
          <div class="absolute top-8 right-0 flex gap-3 animate-float-cloud-2">
            {[...siteData.AMENITIES, ...siteData.AMENITIES, ...siteData.AMENITIES, ...siteData.AMENITIES, ...siteData.AMENITIES].map((amenity, idx) => (
              <div class="flex-shrink-0 flex items-center space-x-1.5 bg-white/10 backdrop-blur-sm px-3 py-1.5 rounded-full border border-white/25 shadow-lg">
                <svg class="w-3 h-3 text-[#C2A983] flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
                <span class="text-xs font-medium whitespace-nowrap">{amenity}</span>
              </div>
            ))}
          </div>
          
          <!-- Ligne 3: Flottement gauche → droite (bas, lent) -->
          <div class="absolute top-16 left-0 flex gap-3 animate-float-cloud-3">
            {[...siteData.AMENITIES, ...siteData.AMENITIES, ...siteData.AMENITIES, ...siteData.AMENITIES, ...siteData.AMENITIES].map((amenity, idx) => (
              <div class="flex-shrink-0 flex items-center space-x-1.5 bg-white/12 backdrop-blur-sm px-3 py-1.5 rounded-full border border-white/20 shadow-lg">
                <svg class="w-3 h-3 text-[#C2A983] flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
                <span class="text-xs font-medium whitespace-nowrap">{amenity}</span>
              </div>
            ))}
          </div>
        </div>
        
        <!-- Desktop: Normal flex wrap -->
        <div class="hidden sm:flex flex-wrap justify-center gap-3 lg:gap-4 px-4">
          {siteData.AMENITIES.map((amenity) => (
            <div class="flex items-center space-x-2 bg-white/10 backdrop-blur-sm px-4 py-2 rounded-full border border-white/20">
              <svg class="w-4 h-4 text-[#C2A983] flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
              </svg>
              <span class="text-sm font-medium">{amenity}</span>
            </div>
          ))}
        </div>
      </div>
      
      <!-- CTA Button -->
      <div class="pt-4 sm:pt-8 pb-16 sm:pb-0">
        <a 
          href="#chambres" 
          class="inline-block px-8 py-3 bg-[#C2A983] text-white text-sm sm:text-base font-semibold rounded-md hover:bg-white hover:text-[#1C1C1C] transition-all duration-300 shadow-lg hover:shadow-xl transform hover:-translate-y-0.5"
        >
          Découvrir nos chambres
        </a>
      </div>
    </div>
  </div>
  
  <!-- Scroll Indicator -->
  <div class="absolute bottom-16 sm:bottom-12 left-1/2 transform -translate-x-1/2 z-10 animate-bounce">
    <a href="#chambres" class="text-white/80 hover:text-white transition-colors">
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
      </svg>
    </a>
  </div>
</section>

<style>
  @keyframes fade-in {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  .animate-fade-in {
    animation: fade-in 1s ease-out;
  }

  /* Floating cloud animations - natural movement */
  @keyframes float-cloud-1 {
    0% {
      transform: translateX(0) translateY(0);
    }
    25% {
      transform: translateX(-25%) translateY(-3px);
    }
    50% {
      transform: translateX(-50%) translateY(0);
    }
    75% {
      transform: translateX(-75%) translateY(3px);
    }
    100% {
      transform: translateX(-100%) translateY(0);
    }
  }

  @keyframes float-cloud-2 {
    0% {
      transform: translateX(0) translateY(0);
    }
    25% {
      transform: translateX(25%) translateY(4px);
    }
    50% {
      transform: translateX(50%) translateY(0);
    }
    75% {
      transform: translateX(75%) translateY(-4px);
    }
    100% {
      transform: translateX(100%) translateY(0);
    }
  }

  @keyframes float-cloud-3 {
    0% {
      transform: translateX(0) translateY(0);
    }
    20% {
      transform: translateX(-20%) translateY(2px);
    }
    40% {
      transform: translateX(-40%) translateY(-2px);
    }
    60% {
      transform: translateX(-60%) translateY(2px);
    }
    80% {
      transform: translateX(-80%) translateY(-2px);
    }
    100% {
      transform: translateX(-100%) translateY(0);
    }
  }

  .animate-float-cloud-1 {
    animation: float-cloud-1 40s linear infinite;
  }

  .animate-float-cloud-2 {
    animation: float-cloud-2 35s linear infinite;
  }

  .animate-float-cloud-3 {
    animation: float-cloud-3 50s linear infinite;
  }
</style>
