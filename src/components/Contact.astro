---
import { getSiteData, getT } from '../utils/i18n';
const siteData = getSiteData(Astro.url);
const t = getT(Astro.url);
---

<section id="contact" class="py-16 sm:py-20 lg:py-32 bg-white">
  <div class="container mx-auto px-6 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="max-w-3xl mx-auto text-center mb-12 sm:mb-16">
      <h2 class="font-playfair text-3xl sm:text-4xl lg:text-5xl font-bold text-[#1C1C1C] mb-4">
        {t.sections.contact}
      </h2>
      <div class="w-24 h-1 bg-[#C2A983] mx-auto mb-6"></div>
      <p class="text-base sm:text-lg text-[#1C1C1C]/70 px-4">
        {t.sections.contactSubtitle}
      </p>
    </div>
    
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 sm:gap-12 lg:gap-16 max-w-6xl mx-auto">
      <!-- Contact Form -->
      <div class="bg-[#FAF8F5] p-6 sm:p-8 rounded-lg shadow-sm">
        <form 
          name="contact" 
          method="POST" 
          data-netlify="true" 
          netlify-honeypot="bot-field"
          class="space-y-6"
        >
          <!-- Hidden fields for Netlify Forms -->
          <input type="hidden" name="form-name" value="contact" />
          
          <!-- Honeypot for spam protection -->
          <div class="hidden">
            <label>
              Don't fill this out if you're human: <input name="bot-field" />
            </label>
          </div>
          
          <!-- Name -->
          <div>
            <label for="name" class="block text-sm font-medium text-[#1C1C1C] mb-2">
              {t.form.nameLabel} <span class="text-red-500">{t.form.required}</span>
            </label>
            <input 
              type="text" 
              id="name" 
              name="name" 
              required
              class="w-full px-4 py-3 bg-white border border-black/[0.08] rounded-md focus:outline-none focus:ring-2 focus:ring-[#C2A983] focus:border-transparent transition-all"
              placeholder={t.form.name}
            />
          </div>
          
          <!-- Email -->
          <div>
            <label for="email" class="block text-sm font-medium text-[#1C1C1C] mb-2">
              {t.form.emailLabel} <span class="text-red-500">{t.form.required}</span>
            </label>
            <input 
              type="email" 
              id="email" 
              name="email" 
              required
              class="w-full px-4 py-3 bg-white border border-black/[0.08] rounded-md focus:outline-none focus:ring-2 focus:ring-[#C2A983] focus:border-transparent transition-all"
              placeholder="jean.dupont@exemple.com"
            />
          </div>
          
          <!-- Phone -->
          <div>
            <label for="phone" class="block text-sm font-medium text-[#1C1C1C] mb-2">
              {t.form.phoneLabel}
            </label>
            <input 
              type="tel" 
              id="phone" 
              name="phone"
              class="w-full px-4 py-3 bg-white border border-black/[0.08] rounded-md focus:outline-none focus:ring-2 focus:ring-[#C2A983] focus:border-transparent transition-all"
              placeholder="+33 6 12 34 56 78"
            />
          </div>
          
          <!-- Subject -->
          <div>
            <label for="subject" class="block text-sm font-medium text-[#1C1C1C] mb-2">
              {t.form.subjectLabel} <span class="text-red-500">{t.form.required}</span>
            </label>
            <select 
              id="subject" 
              name="subject" 
              required
              class="w-full px-4 py-3 bg-white border border-black/[0.08] rounded-md focus:outline-none focus:ring-2 focus:ring-[#C2A983] focus:border-transparent transition-all"
            >
              <option value="">{t.form.selectSubject}</option>
              <option value="reservation">{t.form.reservation}</option>
              <option value="info">{t.form.information}</option>
              <option value="event">{t.form.event}</option>
              <option value="other">{t.form.other}</option>
            </select>
          </div>
          
          <!-- Message -->
          <div>
            <label for="message" class="block text-sm font-medium text-[#1C1C1C] mb-2">
              {t.form.messageLabel} <span class="text-red-500">{t.form.required}</span>
            </label>
            <textarea 
              id="message" 
              name="message" 
              rows="5" 
              required
              class="w-full px-4 py-3 bg-white border border-black/[0.08] rounded-md focus:outline-none focus:ring-2 focus:ring-[#C2A983] focus:border-transparent transition-all resize-none"
              placeholder={t.form.message}
            ></textarea>
          </div>
          
          <!-- GDPR Consent -->
          <div class="flex items-start space-x-3">
            <input 
              type="checkbox" 
              id="consent" 
              name="consent" 
              required
              class="mt-1 w-4 h-4 text-[#C2A983] border-black/[0.08] rounded focus:ring-[#C2A983]"
            />
            <label for="consent" class="text-sm text-[#1C1C1C]/70">
              {t.form.consent} <span class="text-red-500">{t.form.required}</span>
            </label>
          </div>
          
          <!-- Submit Button -->
          <button 
            type="submit"
            class="w-full px-6 py-4 bg-[#C2A983] text-white font-medium rounded-md hover:bg-[#0E2235] transition-all duration-300 shadow-md hover:shadow-lg transform hover:-translate-y-0.5"
          >
            {t.form.send}
          </button>
        </form>
      </div>
      
      <!-- Contact Information -->
      <div class="space-y-8">
        <!-- Direct Contact -->
        <div class="space-y-6">
          <h3 class="font-playfair text-2xl font-semibold text-[#1C1C1C]">
            {t.info.directContact}
          </h3>
          
          <!-- Phone -->
          <a 
            href={`tel:${siteData.PHONE.replace(/\s/g, '')}`}
            class="flex items-start space-x-4 p-4 bg-[#FAF8F5] rounded-lg hover:bg-[#C2A983]/10 transition-colors group"
          >
            <div class="flex-shrink-0 w-12 h-12 bg-[#C2A983]/10 rounded-lg flex items-center justify-center group-hover:bg-[#C2A983] transition-colors">
              <svg class="w-6 h-6 text-[#C2A983] group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
              </svg>
            </div>
            <div>
              <p class="text-sm text-[#1C1C1C]/60 mb-1">{t.info.phone}</p>
              <p class="text-lg font-medium text-[#1C1C1C]">{siteData.PHONE}</p>
            </div>
          </a>
          
          <!-- Email -->
          <a 
            href={`mailto:${siteData.EMAIL}`}
            class="flex items-start space-x-4 p-4 bg-[#FAF8F5] rounded-lg hover:bg-[#C2A983]/10 transition-colors group"
          >
            <div class="flex-shrink-0 w-12 h-12 bg-[#C2A983]/10 rounded-lg flex items-center justify-center group-hover:bg-[#C2A983] transition-colors">
              <svg class="w-6 h-6 text-[#C2A983] group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
            </div>
            <div>
              <p class="text-sm text-[#1C1C1C]/60 mb-1">{t.info.email}</p>
              <p class="text-lg font-medium text-[#1C1C1C] break-all">{siteData.EMAIL}</p>
            </div>
          </a>
        </div>
        
        <!-- Info Box -->
        <div class="bg-[#0E2235] text-white p-6 rounded-lg">
          <h4 class="font-playfair text-xl font-semibold mb-3">
            {t.info.quickResponse}
          </h4>
          <p class="text-white/80 text-sm leading-relaxed">
            {t.info.quickResponseText}
          </p>
        </div>
        
        <!-- Alternative contact notice (for non-Netlify deployment) -->
        <!-- 
        IMPORTANT: Si vous déployez sur un hébergeur autre que Netlify, le formulaire ci-dessus ne fonctionnera pas.
        Vous avez plusieurs options:
        
        Option A - Mailto simple:
        Remplacez l'attribut action du formulaire par:
        action="mailto:contact@hotel-lesejour.com"
        
        Option B - Service externe (Formspree, Basin, etc.):
        1. Créez un compte sur https://formspree.io/ ou https://usebasin.com/
        2. Remplacez data-netlify="true" par action="https://formspree.io/f/YOUR_FORM_ID"
        
        Option C - Votre propre endpoint:
        Créez un endpoint serverless ou API et modifiez l'attribut action
        -->
      </div>
    </div>
  </div>
</section>
