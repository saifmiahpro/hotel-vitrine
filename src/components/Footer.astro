---
import siteData from '../../content/site.json';

const currentYear = new Date().getFullYear();
---

<footer class="bg-[#0E2235] text-white py-12">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-8">
      <!-- Hotel Info -->
      <div>
        <h3 class="font-playfair text-2xl font-semibold mb-4">
          {siteData.HOTEL_NAME}
        </h3>
        <p class="text-white/70 text-sm leading-relaxed mb-4">
          {siteData.TAGLINE}
        </p>
        <p class="text-white/70 text-sm">
          {siteData.ADDRESS}
        </p>
      </div>
      
      <!-- Quick Links -->
      <div>
        <h4 class="font-semibold text-lg mb-4">Liens rapides</h4>
        <nav class="space-y-2">
          <a href="#accueil" class="block text-white/70 hover:text-[#C2A983] transition-colors text-sm">
            Accueil
          </a>
          <a href="#chambres" class="block text-white/70 hover:text-[#C2A983] transition-colors text-sm">
            Nos chambres
          </a>
          <a href="#acces" class="block text-white/70 hover:text-[#C2A983] transition-colors text-sm">
            Accès
          </a>
          <a href="#contact" class="block text-white/70 hover:text-[#C2A983] transition-colors text-sm">
            Contact
          </a>
        </nav>
      </div>
      
      <!-- Legal & Contact -->
      <div>
        <h4 class="font-semibold text-lg mb-4">Informations légales</h4>
        <nav class="space-y-2 mb-4">
          <a href="/mentions-legales" class="block text-white/70 hover:text-[#C2A983] transition-colors text-sm">
            Mentions légales
          </a>
          <a href="/politique-confidentialite" class="block text-white/70 hover:text-[#C2A983] transition-colors text-sm">
            Politique de confidentialité
          </a>
          <a href="/cgv" class="block text-white/70 hover:text-[#C2A983] transition-colors text-sm">
            Conditions générales de vente
          </a>
        </nav>
        <div class="space-y-1">
          <p class="text-white/70 text-sm">
            <a href={`tel:${siteData.PHONE.replace(/\s/g, '')}`} class="hover:text-[#C2A983] transition-colors">
              {siteData.PHONE}
            </a>
          </p>
          <p class="text-white/70 text-sm">
            <a href={`mailto:${siteData.EMAIL}`} class="hover:text-[#C2A983] transition-colors">
              {siteData.EMAIL}
            </a>
          </p>
        </div>
      </div>
    </div>
    
    <!-- Bottom Bar -->
    <div class="border-t border-white/10 pt-8 flex flex-col sm:flex-row justify-between items-center space-y-4 sm:space-y-0">
      <p class="text-white/60 text-sm text-center sm:text-left">
        © {currentYear} {siteData.HOTEL_NAME}. Tous droits réservés.
      </p>
      
