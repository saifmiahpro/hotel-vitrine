---
import siteData from '../../content/site.json';
---

<header class="fixed top-0 left-0 right-0 z-50 bg-[#F7F6F3]/95 backdrop-blur-sm border-b border-black/[0.08] transition-all duration-300" id="header">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-20">
      <!-- Logo -->
      <a href="#accueil" class="font-playfair text-xl sm:text-2xl font-semibold text-[#1C1C1C] hover:text-[#C2A983] transition-colors">
        {siteData.HOTEL_NAME}
      </a>
      
      <!-- Desktop Navigation -->
      <nav class="hidden md:flex items-center space-x-8">
        <a href="#accueil" class="text-sm font-medium hover:text-[#C2A983] transition-colors">Accueil</a>
        <a href="#chambres" class="text-sm font-medium hover:text-[#C2A983] transition-colors">Chambres</a>
        <a href="#acces" class="text-sm font-medium hover:text-[#C2A983] transition-colors">Accès</a>
        <a href="#contact" class="text-sm font-medium hover:text-[#C2A983] transition-colors">Contact</a>
        <a 
          href={siteData.RESERVATION_URL} 
          class="px-6 py-2.5 bg-[#C2A983] text-white text-sm font-medium rounded-md hover:bg-[#0E2235] transition-all duration-300 shadow-sm hover:shadow-md"
        >
          Réserver
        </a>
      </nav>
      
      <!-- Mobile Menu Button -->
      <button 
        id="mobile-menu-button" 
        class="md:hidden p-2 text-[#1C1C1C] hover:text-[#C2A983] transition-colors"
        aria-label="Menu"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>
  </div>
  
  <!-- Mobile Navigation -->
  <nav id="mobile-menu" class="md:hidden hidden bg-white border-t border-black/[0.08]">
    <div class="container mx-auto px-4 py-4 space-y-3">
      <a href="#accueil" class="block py-2 text-sm font-medium hover:text-[#C2A983] transition-colors">Accueil</a>
      <a href="#chambres" class="block py-2 text-sm font-medium hover:text-[#C2A983] transition-colors">Chambres</a>
      <a href="#acces" class="block py-2 text-sm font-medium hover:text-[#C2A983] transition-colors">Accès</a>
      <a href="#contact" class="block py-2 text-sm font-medium hover:text-[#C2A983] transition-colors">Contact</a>
      <a 
        href={siteData.RESERVATION_URL} 
        class="block text-center px-6 py-2.5 bg-[#C2A983] text-white text-sm font-medium rounded-md hover:bg-[#0E2235] transition-colors"
      >
        Réserver
      </a>
    </div>
  </nav>
</header>

<script is:inline src="/header.js"></script>
