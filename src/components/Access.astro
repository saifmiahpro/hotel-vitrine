---
import siteData from '../../content/site.json';
---

<section id="acces" class="py-20 sm:py-24 lg:py-32 bg-[#F7F6F3]">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="max-w-3xl mx-auto text-center mb-16">
      <h2 class="font-playfair text-3xl sm:text-4xl lg:text-5xl font-bold text-[#1C1C1C] mb-4">
        Informations & Accès
      </h2>
      <div class="w-24 h-1 bg-[#C2A983] mx-auto"></div>
    </div>
    
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16">
      <!-- Info Cards -->
      <div class="space-y-6">
        <!-- Check-in / Check-out -->
        <div class="bg-white p-6 rounded-lg shadow-sm border border-black/[0.05]">
          <div class="flex items-start space-x-4">
            <div class="flex-shrink-0 w-12 h-12 bg-[#C2A983]/10 rounded-lg flex items-center justify-center">
              <svg class="w-6 h-6 text-[#C2A983]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <div class="flex-1">
              <h3 class="font-semibold text-lg text-[#1C1C1C] mb-2">Horaires</h3>
              <p class="text-[#1C1C1C]/70">
                <span class="font-medium">Check-in:</span> {siteData.CHECKIN_INFO}<br />
                <span class="font-medium">Check-out:</span> {siteData.CHECKOUT_INFO}
              </p>
            </div>
          </div>
        </div>
        
        <!-- Parking -->
        <div class="bg-white p-6 rounded-lg shadow-sm border border-black/[0.05]">
          <div class="flex items-start space-x-4">
            <div class="flex-shrink-0 w-12 h-12 bg-[#C2A983]/10 rounded-lg flex items-center justify-center">
              <svg class="w-6 h-6 text-[#C2A983]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
              </svg>
            </div>
            <div class="flex-1">
              <h3 class="font-semibold text-lg text-[#1C1C1C] mb-2">Parking</h3>
              <p class="text-[#1C1C1C]/70">{siteData.PARKING_INFO}</p>
            </div>
          </div>
        </div>
        
        <!-- Public Transport -->
        <div class="bg-white p-6 rounded-lg shadow-sm border border-black/[0.05]">
          <div class="flex items-start space-x-4">
            <div class="flex-shrink-0 w-12 h-12 bg-[#C2A983]/10 rounded-lg flex items-center justify-center">
              <svg class="w-6 h-6 text-[#C2A983]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
              </svg>
            </div>
            <div class="flex-1">
              <h3 class="font-semibold text-lg text-[#1C1C1C] mb-2">Transports publics</h3>
              <p class="text-[#1C1C1C]/70">{siteData.PUBLIC_TRANSPORT_INFO}</p>
            </div>
          </div>
        </div>
        
        <!-- Address -->
        <div class="bg-white p-6 rounded-lg shadow-sm border border-black/[0.05]">
          <div class="flex items-start space-x-4">
            <div class="flex-shrink-0 w-12 h-12 bg-[#C2A983]/10 rounded-lg flex items-center justify-center">
              <svg class="w-6 h-6 text-[#C2A983]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
            </div>
            <div class="flex-1">
              <h3 class="font-semibold text-lg text-[#1C1C1C] mb-2">Adresse</h3>
              <p class="text-[#1C1C1C]/70 mb-3">{siteData.ADDRESS}</p>
              <button 
                id="copy-address-btn"
                class="text-sm text-[#C2A983] hover:text-[#0E2235] font-medium transition-colors flex items-center space-x-2"
              >
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
                </svg>
                <span>Copier l'adresse</span>
              </button>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Map -->
      <div class="space-y-6">
        <div id="map-container" class="bg-white p-2 rounded-lg shadow-sm border border-black/[0.05] overflow-hidden relative min-h-[450px]">
          <!-- Map placeholder (shown if cookies not accepted) -->
          <div id="map-placeholder" class="absolute inset-0 flex items-center justify-center bg-gray-100 rounded-lg hidden">
            <div class="text-center p-6 max-w-md">
              <svg class="w-16 h-16 mx-auto mb-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
              <h4 class="font-semibold text-lg text-[#1C1C1C] mb-2">Carte non disponible</h4>
              <p class="text-sm text-[#1C1C1C]/70 mb-4">
                Pour afficher la carte Google Maps, veuillez accepter les cookies.
              </p>
              <button 
                id="enable-maps-btn"
                class="px-6 py-2 bg-[#C2A983] text-white font-medium rounded-md hover:bg-[#0E2235] transition-colors"
              >
                Activer la carte
              </button>
            </div>
          </div>
          
          <!-- Actual map iframe -->
          <iframe 
            id="google-maps-iframe"
            data-src={siteData.GOOGLE_MAPS_EMBED_URL}
            width="100%" 
            height="450" 
            style="border:0; border-radius: 0.5rem;" 
            allowfullscreen="" 
            loading="lazy" 
            referrerpolicy="no-referrer-when-downgrade"
            title={`Carte de ${siteData.HOTEL_NAME}`}
          ></iframe>
        </div>
        
        <a 
          href={`https://www.google.com/maps/search/?api=1&query=${encodeURIComponent(siteData.ADDRESS)}`}
          target="_blank"
          rel="noopener noreferrer"
          class="block w-full px-6 py-3 bg-[#0E2235] text-white text-center font-medium rounded-md hover:bg-[#C2A983] transition-all duration-300 shadow-sm hover:shadow-md"
        >
          Obtenir l'itinéraire
        </a>
      </div>
    </div>
  </div>
</section>

<script>
  // Copy address to clipboard
  const copyBtn = document.getElementById('copy-address-btn');
  if (copyBtn) {
    copyBtn.addEventListener('click', async () => {
      try {
        const address = "{siteData.ADDRESS}";
        await navigator.clipboard.writeText(address);
        
        const originalText = copyBtn.innerHTML;
        copyBtn.innerHTML = `
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
          </svg>
          <span>Copié !</span>
        `;
        
        setTimeout(() => {
          copyBtn.innerHTML = originalText;
        }, 2000);
      } catch (err) {
        console.error('Failed to copy:', err);
      }
    });
  }

  // Google Maps consent management
  function checkMapConsent() {
    const getCookieConsent = (window as any).getCookieConsent;
    const consent = getCookieConsent ? getCookieConsent() : null;
    const mapIframe = document.getElementById('google-maps-iframe') as HTMLIFrameElement;
    const mapPlaceholder = document.getElementById('map-placeholder');
    
    if (consent && consent.maps) {
      // Load map
      if (mapIframe && !mapIframe.src) {
        mapIframe.src = mapIframe.getAttribute('data-src') || '';
      }
      mapPlaceholder?.classList.add('hidden');
    } else {
      // Show placeholder
      mapPlaceholder?.classList.remove('hidden');
    }
  }

  // Enable maps button
  document.getElementById('enable-maps-btn')?.addEventListener('click', () => {
    const consent = {
      analytics: false,
      maps: true,
      fonts: true,
      timestamp: Date.now()
    };
    localStorage.setItem('hotel-cookie-consent', JSON.stringify(consent));
    checkMapConsent();
  });

  // Check on load and when consent changes
  document.addEventListener('DOMContentLoaded', checkMapConsent);
  window.addEventListener('cookieConsentChanged', checkMapConsent);
</script>
